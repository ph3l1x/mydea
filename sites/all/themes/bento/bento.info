regions[content]        = 'Content'
regions[content_bottom] = 'Content Bottom'
regions[sidebar_second] = 'Sidebar Last'
regions[postscript] 	= 'Postscript'
regions[footer]         = 'Footer'
regions[information]    = 'Information - Below Copyright'
